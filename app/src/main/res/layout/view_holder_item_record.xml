<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/record_index_title"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            tools:text="@tools:sample/first_names"
            android:textColor="@color/textHintColor"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/record_datetime_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="4dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/textHintColorSub"
            tools:text="@tools:sample/date/mmddyy"
            app:layout_constraintStart_toStartOf="@+id/record_index_title"
            app:layout_constraintTop_toBottomOf="@+id/record_index_title"/>

    <TextView
            android:id="@+id/record_duration_title"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:layout_marginTop="4dp"
            android:paddingEnd="16dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/textHintColorSub"
            tools:text="@tools:sample/date/hhmm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/record_datetime_title"
            app:layout_constraintTop_toBottomOf="@+id/record_datetime_title"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="8dp"/>

    <ImageView
            android:id="@+id/iv_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_select"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            app:layout_constraintVertical_bias="0.6"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>